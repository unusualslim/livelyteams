<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Existing Fields -->
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <!-- Notification Preferences Button -->
  <div class="field">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#notificationPreferencesModal">
      Manage Notification Preferences
    </button>
  </div>

  <!-- Update Button -->
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<!-- Bootstrap Modal for Notification Preferences -->
<div class="modal fade" id="notificationPreferencesModal" tabindex="-1" aria-labelledby="notificationPreferencesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="notificationPreferencesModalLabel">Notification Preferences</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="modal_message" class="alert alert-success" style="display: none;">
          Settings saved successfully!
        </div>

        <!-- âœ… NEW SECTION: Notification Emails -->
        <div class="mb-4">
          <h5>Notification Emails</h5>
          <p class="text-muted" style="margin-top: -6px;">
            These emails will also receive your alerts (in addition to your login email).
          </p>

          <% if resource.notification_emails.any? %>
            <ul class="list-group mb-3">
              <% resource.notification_emails.order(:email).each do |ne| %>
                <li class="list-group-item d-flex justify-content-between align-items-start">
                  <div>
                    <div><strong><%= ne.email %></strong></div>
                    <small class="text-muted">Status: <%= ne.active? ? "Active" : "Disabled" %></small>
                  </div>

                  <div class="d-flex gap-2">
                    <!-- Toggle Active -->
                    <%= form_with model: [resource, ne], local: true, method: :patch do |nf| %>
                      <div class="form-check" style="margin-right: 10px;">
                        <%= nf.check_box :active, class: "form-check-input", id: "ne_active_#{ne.id}" %>
                        <%= nf.label :active, "Active", class: "form-check-label", for: "ne_active_#{ne.id}" %>
                      </div>
                      <%= nf.submit "Save", class: "btn btn-sm btn-outline-secondary" %>
                    <% end %>

                    <!-- Remove -->
                    <%= button_to "Remove",
                          user_notification_email_path(resource, ne),
                          method: :delete,
                          class: "btn btn-sm btn-outline-danger",
                          data: { turbo_confirm: "Remove #{ne.email}?" } %>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p><em>No notification emails added yet.</em></p>
          <% end %>

          <!-- Add new notification email -->
          <%= form_with model: [resource, NotificationEmail.new],
                url: user_notification_emails_path(resource),
                local: true do |nf| %>
            <div class="input-group" style="max-width: 520px;">
              <%= nf.email_field :email,
                    required: true,
                    placeholder: "alerts@company.com",
                    autocomplete: "email",
                    class: "form-control" %>
              <button class="btn btn-outline-primary" type="submit">Add</button>
            </div>
          <% end %>
        </div>

        <hr>

        <!-- Existing Preferences Form (AJAX) -->
        <%= form_for(resource, as: resource_name, url: update_user_preferences_path, html: { method: :patch, id: 'notification_settings_form' }) do |f| %>
          <h5>Notification Types</h5>

          <div class="mb-3">
            <%= f.check_box :new_case_created %>
            <%= f.label :new_case_created, "New Case Created" %>
          </div>

          <div class="mb-3">
            <%= f.check_box :updated_case %>
            <%= f.label :updated_case, "Updated Case" %>
          </div>

          <div class="mb-3">
            <%= f.check_box :new_comment %>
            <%= f.label :new_comment, "New Comment" %>
          </div>

          <div class="mb-3">
            <%= f.check_box :billable_case %>
            <%= f.label :billable_case, "Billable Case" %>
          </div>

          <div class="mb-3">
            <%= f.check_box :closed_case %>
            <%= f.label :closed_case, "Closed Case" %>
          </div>

          <h5>Notification Method</h5>
          <div class="mb-3">
            <%= f.radio_button :notification_method, 'text', id: 'notification_method_text' %>
            <%= f.label :notification_method_text, "Text" %><br>
            <%= f.radio_button :notification_method, 'email', id: 'notification_method_email' %>
            <%= f.label :notification_method_email, "Email" %><br>
            <%= f.radio_button :notification_method, 'both', id: 'notification_method_both' %>
            <%= f.label :notification_method_both, "Both" %>
          </div>

          <div class="actions">
            <%= f.submit "Save Preferences", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('turbo:load', () => {
    const form = document.querySelector('#notification_settings_form');
    const messageDiv = document.querySelector('#modal_message');
    const modal = new bootstrap.Modal(document.getElementById('notificationPreferencesModal'));

    if (!form) return;

    form.addEventListener('submit', (event) => {
      event.preventDefault();

      const formData = new FormData(form);
      fetch(form.action, {
        method: form.method,
        body: formData,
        headers: {
          'X-Requested-With': 'XMLHttpRequest',
          'Accept': 'application/json'
        }
      }).then(response => response.json()).then(data => {
        if (data.success) {
          messageDiv.style.display = 'block';
          setTimeout(() => {
            messageDiv.style.display = 'none';
            modal.hide();
          }, 3000);
        } else {
          messageDiv.style.display = 'none';
        }
      }).catch(error => {
        console.error('Error:', error);
      });
    });
  });
</script>