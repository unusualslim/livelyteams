<%= form_with model: @location, local: true do |form| %>
  <% if  @location.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(location.errors.count, "error") %>
          prohibited this location from being saved:
      </h2>
      <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p style="display:inline;">
    <%= form.submit "Save", :class => "btn btn-success" %>
  </p>
  <p>
    <%= form.label :short_name %>
    <%= form.text_field :short_name, {required: true, class: "form-control"} %>
    <br><%= form.label :name %>
    <%= form.text_field :name, {required: true, class: "form-control"} %>  
    <br><%= form.label :address1 %>
    <%= form.text_field :address1, class: "form-control" %>
    <br><%= form.label :address2 %>
    <%= form.text_field :address2, class: "form-control" %>
    <br><%= form.label :city %>
    <%= form.text_field :city, class: "form-control" %>
    <br><%= form.label :state %>
    <%= form.text_field :state, class: "form-control" %>
    <br><%= form.label :zip %>
    <%= form.text_field :zip, class: "form-control" %>
    <br><%= form.label :phone %>
    <%= form.text_field :phone, {class: "form-control", name: "phoneNumber", id: "phoneNumber"} %>
  </p>

  <%= form.text_area :note, :class => "tinymce h-100", :rows => 50, :cols => 1 %>
  <%# form.rich_text_area :note %>

<% end %>


