<%= link_to '+', new_location_path, :class => "btn btn-primary" %>
<input id="gfg" type="text" 
                 placeholder="Search here">
<table class="table table-striped">
   <thead>
   <tr>
    <th scope="col">Name</th>
    <th scope="col">Short Name </th>
    <th scope="col">Phone</th>
    <th scope="col" colspan="2"></th>
  </tr>
  <thead>

  <tbody id="geeks">
  <% @locations.each do |location| %>
    <tr scope="row">
      <td><%= link_to location.name, location_path(location) %></td>
      <td><%= location.short_name %></td>
      <td><%= link_to location.phone, "tel:#{location.phone}"  %></td>
      <td><%= link_to 'edit', edit_location_path(location) %></td>
      <td><%= link_to 'X', location_path(location.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
   
  <% end %>
  </tbody>
</table>


<script>
            $(document).ready(function() {
                $("#gfg").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#geeks tr").filter(function() {
                        $(this).toggle($(this).text()
                        .toLowerCase().indexOf(value) > -1)
                    });
                });
            });
</script>


