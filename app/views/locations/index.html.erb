<%= link_to '+', new_location_path, :class => "btn btn-primary" %>
<table class="table table-striped">
   <thead>
   <tr>
    <th scope="col">Name</th>
    <th scope="col">Short Name </th>
    <th scope="col">Phone</th>
    <th scope="col" colspan="2"></th>
  </tr>
  <thead>

  <tbody>
  <% @locations.each do |location| %>
    <tr scope="row">
      <td><%= link_to location.name, location_path(location) %></td>
      <td><%= location.short_name %></td>
      <td><%= link_to location.phone, "tel:#{location.phone}"  %></td>
      <td><%= link_to 'edit', edit_location_path(location) %></td>
      <td><%= link_to 'X', location_path(location.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
   
  <% end %>
  </tbody>
</table>


