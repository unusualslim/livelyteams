
<%= link_to '+', new_admin_equipment_path, :class => "btn btn-primary" %>
<table class="table table-striped">
   <thead>
   <tr>
    <th scope="col">Model </th>
    <th scope="col">Manufacturer</th>
    <th scope="col" colspan="2"></th>
  </tr>
  <thead>

  <tbody>
  <% @equipments.each do |equipment| %>
    <tr scope="row">
      <td><%= link_to equipment.model,admin_equipment_path(equipment) %></td>
      <td><%= equipment.manufacturer.name %></td>
      <td><%= link_to 'edit', edit_admin_equipment_path(equipment) %></td>
      <td><%= link_to 'X', admin_equipment_path(equipment), method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


