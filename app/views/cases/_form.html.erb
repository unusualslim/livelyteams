<%= form_for @case do |form| %>
  <% if @case.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@case.errors.count, "error") %> prohibited
        this Case from being saved:
      </h2>
      <ul>
        <% @case.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   <p>
    <%= form.label :subject %>
    <%= form.text_field :subject, required: true %>
   </p>
   <p>
     <%= form.label "Locations" %>
     <%= form.collection_select :location_ids, Location.order(:name), :id, :name,{:prompt => false}, {:multiple => true, :size => 10, :required => true } %>
   </p>
   <p>
     <%= form.label :severity %>
     <%= form.collection_select :severity_id, Severity.all, :id, :severity, {:selected => 2} %>
   </p>
   <p>
    <%= form.label :status %>
    <%= form.collection_select :status_id, Status.all, :id, :status, {:selected => 1} %>
  </p>
  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :attachments %>
    <%= form.file_field :files, multiple: true %>
  </p>
  <p>
    <%= form.label :assigned_to %>
    <%= form.collection_select :assigned_to_id, User.all, :id, :email %>
  </p>

  <%= form.hidden_field :requested_by_id, value: current_user.id %>
  <p>
    <%= form.submit %>
  </p>
<% end %>
