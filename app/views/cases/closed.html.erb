<%= link_to 'Open Cases', cases_path %>
<%= link_to 'Billable Cases', billable_cases_path %>
<%= link_to 'Closed Cases', closed_cases_path %>
<h2>Closed Cases (<%= @closed_cases.count %>)</h2>
<%= link_to 'New Case', new_case_path, :class => "btn btn-primary" %>

<div class="container">
  <div class="row">

    <div class="col-md-4">Case No.</div>
    <div class="col-md-4">Subject</div>
    <div class="col-md-4">Locations</div>
    <!--      <div class="col-md-4">Requested By</div>-->
    <div class="col-md-4">Assigned To</div>
    <div class="col-md-4">Comments</div>
    <div class="col-md-4">Attachments</div>
    <div class="col-md-4">Status</div>
    <div class="col-md-4">Severity</div>
    <div class="col-md-4">Created On</div>
    <div class="col-md-4"></div>
  </div>
  <% @closed_cases.each do |c| %>
  <% case  c.severity.severity
  when "Urgent" %>
  <div class="row" class="table-danger">
    <% when "Low"  %>
    <div class="row" class="table-secondary">
      <% else %>
      <div class="row" class="table-white">
        <% end %>
        <div class="col-md-4"><%= link_to c.id, case_path(c), :class => "btn btn-primary" %></div>
        <div class="col-md-4"><%= c.subject %></div>
        <div class="col-md-4"><% c.case_locations.each do |tl| %>
          <%= link_to "#{tl.location.short_name} (#{tl.location.city})", location_path(tl.location), :class => "btn btn-info" %>
          <% end %>
        </div>
        <!-- <div class="col-md-4"><%# c.requested_by.email unless c.requested_by.blank? %></div>-->
        <div class="col-md-4"><%= c.assigned_to.email unless c.assigned_to.blank? %></div>
        <div class="col-md-4"><span class="badge badge-dark"><%= c.case_comments.count %></span></div>
        <div class="col-md-4"><span class="badge badge-dark"><%= c.files.count %></span></div>
        <% case c.status.status
        when 'Open' %>
        <div class="col-md-4"><span class="dot"></span><%= c.status.status unless c.status.blank? %></div>
        <% when 'In progress' %>
        <div class="col-md-4"><span class="spinner-border spinner-border-sm"></span> <%= c.status.status unless c.status.blank? %></div>
        <% when 'Complete: Billable' %>
        <div class="col-md-4"><span class="badge badge-success"><%= c.status.status unless c.status.blank? %></span></div>
        <% end %>

        <div class="col-md-4"><%= c.severity.severity unless c.severity.blank? %></div>
        <div class="col-md-4"><%= c.created_at.strftime("%B %d, %Y")  %></div>
        <div class="col-md-4"><%= link_to 'Edit', edit_case_path(c) %></div>
        <div class="col-md-4"><%= link_to 'X', case_path(c), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, :class => "btn btn-danger btn-sm" %></div>
      </div>
      <% end %>
    </div>
