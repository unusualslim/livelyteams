<%= link_to '+', new_note_path, :class => "btn btn-primary" %>
<input id="gfg" type="text"
                 placeholder="Search here">
<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <td scope="col">Title</td>
      <td scope="col">Updated</td>
      <td scope="col" colspan="1"></td>
    </thead>
    <tbody id="geeks">
      <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, edit_note_path(note), data: { turbolinks: false } %></td>
        <td><%= note.updated_at %></td>
        <td><%= link_to 'X', note_path(note), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, :class => "btn btn-danger btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </thead>
</table>
</div>

<script>
            $(document).ready(function() {
                $("#gfg").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#geeks tr").filter(function() {
                        $(this).toggle($(this).text()
                        .toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
