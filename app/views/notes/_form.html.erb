<script>document.dispatchEvent(new Event('DOMContentLoaded'));</script>
<%= form_for @note do |f| %>

  <!-- Submit Button -->
  <%= f.submit "Save", class: "btn btn-success" %>

  <!-- Title Field -->
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <br>

  <!-- Content Field with TinyMCE -->
  <%= f.text_area :content, class: "tinymce h-100", style: "width: 100%;", rows: 50, cols: 1 %>

  <!-- Hidden User ID Field -->
  <%= f.hidden_field :user_id, value: current_user.id %>

<% end %>

