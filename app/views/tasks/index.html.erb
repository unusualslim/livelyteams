
<%= link_to 'New Task', new_task_path, :class => "btn btn-primary" %>

<h2> Tasks </h2>
<div class="table-responsive">
<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Task List</th>
      <th scope="col">Task</th>
      <th scope="col">Location</th>
      <!-- <th scope="col" colspan="1"></th>-->
    </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr scope="row" class=<%= "danger" if task.severity.severity == 'High' %>>
      <td><%= link_to task.id, task_path(task) %></td>
      <td><%= link_to task.task_list.name, task_list_path(task.task_list.id) %></td>
      <td><%= task.subject %></td>
      <td><% task.task_locations.each do |tl| %>
          <%= tl.location.short_name %>,
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
