<div class="container mt-4">
  <h1 class="text-center mb-4">Search Results</h1>

  <div class="row">
    <!-- Cases Section -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3>Cases</h3>
        </div>
        <div class="card-body">
          <% if @cases.any? %>
            <% @cases.each do |c| %>
              <div class="mb-3">
                <strong><%= link_to "Case No. #{c.id}", case_path(c) %></strong><br>
                <p class="mb-1">
                  <strong>Subject:</strong> <%= c.subject %><br>
                  <strong>Body:</strong> <%= truncate(c.description, length: 100) %><br>
                </p>
                <p>
                  <strong>Location(s):</strong>
                  <% c.case_locations.each do |cl| %>
                    <%= link_to cl.location.name, location_path(cl.location) %>
                  <% end %>
                </p>
              </div>
              <hr>
            <% end %>
          <% else %>
            <p>No cases found.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Locations Section -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h3>Locations</h3>
        </div>
        <div class="card-body">
          <% if @locations.any? %>
            <% @locations.each do |location| %>
              <div class="mb-3">
                <strong><%= link_to location.name, location_path(location) %></strong>
              </div>
              <hr>
            <% end %>
          <% else %>
            <p>No locations found.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-warning text-dark">
          <h3>Comments</h3>
        </div>
        <div class="card-body">
          <% if @comments.any? %>
            <% @comments.each do |comment| %>
              <div class="mb-3">
                <p>
                  <strong>Comment on Case No. <%= link_to comment.case.id, case_path(comment.case) %>:</strong><br>
                  <%= truncate(comment.body, length: 100) %>
                </p>
              </div>
              <hr>
            <% end %>
          <% else %>
            <p>No comments found.</p>
          <% end %>
        </div>
      </div>
    </div>                          
  </div>
</div>
