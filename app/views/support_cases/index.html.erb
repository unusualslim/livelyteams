
<%= link_to 'New Case', new_support_case_path %>

<h2> Open Cases </h2>
<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Subject</th>
      <th scope="col">Location</th>
      <!-- <th scope="col" colspan="1"></th>-->
    </tr>
  </thead>

  <tbody>
  <% @support_cases_open.each do |support_case| %>
    <tr scope="row" class=<%= "danger" if support_case.severity.severity == 'High' %>>
      <td><%= link_to support_case.id, support_case_path(support_case) %></td>
      <td><%= support_case.subject %></td>
      <td><%= link_to support_case.location.name, location_path(support_case.location.id) %></td> 
    </tr>
  <% end %>
  </tbody>
</table>
<h2>Closed Cases</h2>
<table class="table table-striped table-hover">
  <tr>
    <th>Number</th>
    <th>Subject</th>
    <th>Location</th>
    <th>Description</th>
    <th colspan="1"></th>
  </tr>

  <% @support_cases_closed.each do |support_case| %>
     <tr>
      <td><%= link_to support_case.id, support_case_path(support_case) %></td>
      <td><%= support_case.subject %></td>
      <td><%= support_case.location.short_name unless support_case.location.blank? %></td>
      <td><%= support_case.description %></td>
      <td><%= link_to 'Edit', edit_support_case_path(support_case) %></td>
    </tr>
  <% end %>
</table>
