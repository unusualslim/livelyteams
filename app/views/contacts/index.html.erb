<%= link_to '+', new_contact_path, :class => "btn btn-primary" %>
<div class="table-resonsive">
<table class="table table-striped">
   <thead>
   <tr>
    <th scope="col">Company</th>
    <th scope="col">First Name </th>
    <th scope="col">Last Name </th>
    <th scope="col">Email</th>
    <th scope="col">Work Number</th>
    <th scope="col" colspan="1"></th>
    <th scope="col" colspan="1"></th>
  </tr>
  <thead>

  <tbody>
  <% @contacts.each do |contact| %>
    <tr scope="row">
      <td><%= link_to contact.company, contact_path(contact) %></td>
      <td><%= contact.first_name %></td>
      <td><%= contact.last_name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.work_number %></td>
      <td><%= link_to 'edit', edit_contact_path(contact) %></td>
      <td><%= link_to 'X', contact_path(contact), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, :class => "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
