<%= form_with model: @severity, local: true do |form| %>
  <% if  @severity.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(severity.errors.count, "error") %>
          prohibited this Severity from being saved:
      </h2>
      <ul>
        <% @severity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :severity %>
    <%= form.text_field :severity %>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
